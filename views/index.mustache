<!DOCTYPE html>
<html lang="en">
<head>

  <!-- Basic Page Needs
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <meta charset="utf-8">
  <title>Per Welander</title>
  <meta name="Per Welander" content="">

  <!-- Mobile Specific Metas
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- FONT
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <link href="//fonts.googleapis.com/css?family=Raleway:400,300,600" rel="stylesheet" type="text/css">

  <!-- CSS
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <link rel="stylesheet" type="text/css" href="css/normalize.css">
  <link rel="stylesheet" type="text/css" href="css/skeleton.css">

  <!-- Functionality
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
  <script src="/client.js"></script>

</head>
<body>

  <!-- Primary Page Layout
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <div class="container" style="margin-top: 5%">
    <a class="button" href="/create">Record Time</a>
    <a class="button" onclick="calculateTotalMinutes()">Calculate total worked time</a>
    <form id="dateform">
      <div class="row">
        <div class="six columns">
          <label for="startdate">Start date</label>
          <input class="u-full-width" type="date" placeholder="date" id="startdate" name="startdate">
        </div>
        <div class="six columns">
          <label for="enddate">End date</label>
          <input class="u-full-width" type="date" placeholder="date" id="enddate" name="enddate">
        </div>
      </div>
      <button class="button" type="submit">Calculate total worked hours between dates</button>
    </form>
    <div>
      <h3>Hours worked: <span id="totalhours"></span></h3>
    </div>
    <table class="u-full-width">
      <thead>
        <tr>
          <th>Date</th>
          <th>Minutes Worked</th>
          <th>Company</th>
          <th>Project</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#entries1}}
        <tr>
          <td>{{prettyDate}}</td>
          <td>{{minutes}}</td>
          <td>{{company}}</td>
          <td>{{project}}</td>
          <td><button type="button" onclick="deleteEntry(this)" data-id="{{id}}">Del</button></td>
        </tr>
        {{/entries1}}
      </tbody>
    </table>
</div>

<!-- End Document
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
</body>
</html>
